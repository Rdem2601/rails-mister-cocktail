
<h1> <%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose|%>
<%= dose.ingredient.name %>
<%= dose.description %>
<%= link_to "Delete dose", dose_path(dose), method: :delete %>
<% end %>




<%= simple_form_for [@cocktail, @dose]  do |f| %>

Ingredients
<%= f.association :ingredient %>
<%= f.input :description , placeholder: "Description" %>
<%= f.submit %>
<% end %>
